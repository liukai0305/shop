<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/data_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/data_personalmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="个人信息"
        android:textColor="#090303"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/data_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="性别:"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/data_personalmsg"
        app:layout_constraintTop_toBottomOf="@id/data_personalmsg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="36dp"
        android:text="星座:天枰座"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/data_sex"
        app:layout_constraintTop_toTopOf="@id/data_personalmsg" />

    <TextView
        android:id="@+id/data_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="生日:"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/data_sex"
        app:layout_constraintTop_toBottomOf="@id/data_sex" />

    <TextView
        android:id="@+id/data_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="所在地区:"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/data_birthday"
        app:layout_constraintTop_toBottomOf="@id/data_birthday" />

    <TextView
        android:id="@+id/data_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="技能标签"
        android:textColor="#090303"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/data_city"
        app:layout_constraintTop_toBottomOf="@id/data_city" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="暂无"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/data_skill"
        app:layout_constraintTop_toBottomOf="@id/data_skill" />
</androidx.constraintlayout.widget.ConstraintLayout>
