<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/personal_activity_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/personal_activity_name"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/personal_activity_header"
        android:text="官方小袍"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/personal_activity_time"
        android:layout_marginLeft="5dp"
        android:textSize="10sp"
        android:text="一天前"
        app:layout_constraintLeft_toRightOf="@id/personal_activity_header"
        app:layout_constraintTop_toBottomOf="@id/personal_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/personal_activity_level"
        android:src="@mipmap/lv1"
        app:layout_constraintLeft_toRightOf="@id/personal_activity_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_width="60dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/personal_activity_text"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_margin="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/personal_activity_header"
        android:layout_width="340dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/personal_expand"
        android:layout_marginRight="100dp"
        app:layout_constraintRight_toRightOf="@id/personal_activity_text"
        app:layout_constraintBottom_toBottomOf="@id/personal_activity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全文"
        android:layout_marginTop="10dp"
        android:textColor="#f00"/>
    <TextView
        android:id="@+id/personal_putaway"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/personal_activity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收起"
        android:layout_marginTop="10dp"
        android:textColor="#f00"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="25dp"
        android:id="@+id/personal_rv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/personal_activity_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>