<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_370"
    android:layout_height="wrap_content"
    android:background="@color/hong"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBox
        android:id="@+id/checkbox_select"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/selector_hook"
        android:button="@null"/>
    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintLeft_toRightOf="@id/checkbox_select"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/txt_name"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:layout_constraintLeft_toRightOf="@id/img_icon"
        app:layout_constraintTop_toTopOf="@id/img_icon"
        android:text="被子"
        android:textColor="@color/hei"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_10"/>
    <TextView
        android:id="@+id/txt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_icon"
        android:text="x6"
        android:textSize="@dimen/sp_16"
        android:layout_marginRight="@dimen/dp_20"/>
    <TextView
        android:id="@+id/txct_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:layout_constraintLeft_toRightOf="@id/img_icon"
        app:layout_constraintBottom_toBottomOf="@id/img_icon"
        android:text="￥100"
        android:textColor="@color/hei"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_15"/>
    <!--编辑状态的布局-->
    <TextView
        android:id="@+id/txt_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_icon"
        android:text="已选择 >"
        android:textSize="@dimen/sp_16"
        android:layout_marginRight="@dimen/dp_20"/>

    <com.example.fenghaogoxiangmu.common.CartCustomView
        android:id="@+id/view_number"
        android:layout_width="@dimen/dp_150"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_select">
        <include layout="@layout/layout_custom_cart" />
    </com.example.fenghaogoxiangmu.common.CartCustomView>
</androidx.constraintlayout.widget.ConstraintLayout>