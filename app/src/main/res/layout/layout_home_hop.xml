<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/hot"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:id="@+id/view"
        android:layout_marginRight="@dimen/dp_10"
        android:background="#ccc" />

    <ImageView
        android:id="@+id/img_hot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_width="100dp"
        android:layout_marginTop="10dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:scaleType="centerCrop"

        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txt_hot_name"
        app:layout_constraintLeft_toRightOf="@id/img_hot"
        app:layout_constraintTop_toTopOf="@id/img_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="商品"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt_hot_title"
        app:layout_constraintBottom_toBottomOf="@id/img_hot"
        app:layout_constraintLeft_toRightOf="@id/img_hot"
        app:layout_constraintTop_toTopOf="@id/img_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="商品"
        android:textColor="#D6D5D5"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt_hot_price"
        app:layout_constraintBottom_toBottomOf="@id/img_hot"
        app:layout_constraintLeft_toRightOf="@id/img_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="￥9.99"
        android:textColor="#ff0000"
        android:textSize="12dp" />
</androidx.constraintlayout.widget.ConstraintLayout>