<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/shi_img_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shi_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:text="话题"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@id/shi_img_head"
        app:layout_constraintTop_toTopOf="@id/shi_img_head" />

    <TextView
        android:id="@+id/shi_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:text="4天前"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@id/shi_img_head"
        app:layout_constraintLeft_toRightOf="@id/shi_img_head"
        />

    <ImageView
        android:id="@+id/shi_img_level"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/lv6"
        app:layout_constraintBottom_toBottomOf="@+id/shi_tv_username"
        app:layout_constraintStart_toEndOf="@+id/shi_tv_username"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shi_txt_follow"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_follow_bg"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="+关注"
        android:textColor="@color/color_attention"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shi_tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="内容描述"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shi_img_head" />

    <cn.jzvd.JzvdStd
        android:id="@+id/jiao"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@id/shi_txt_comment"
        app:layout_constraintTop_toBottomOf="@id/shi_tv_des" />


    <TextView
        android:id="@+id/txt_follow_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_like"
        android:gravity="center"
        android:text="20"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shi_txt_comment" />

    <TextView
        android:id="@+id/shi_txt_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_comment"
        android:gravity="center"
        android:text="20"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>