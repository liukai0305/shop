<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_position_two"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="2dp"
    android:gravity="center"
    android:orientation="vertical">

    <com.qutu.talk.view.RippleView
        android:id="@+id/wave_2"
        style="@style/wave_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rl_tou2"
        android:layout_width="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="70dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/user_header"
            app:riv_border_color="@color/font_89E0FB"
            app:riv_border_width="1dip"
            app:riv_corner_radius="180dip" />

        <ImageView
            android:id="@+id/iv_ts2"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_txk_2"
            style="@style/txk_style" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"></View>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgVedio2"
        android:layout_width="17dp"
        android:layout_height="20dp"
        android:layout_alignRight="@id/rl_tou2"
        android:layout_alignBottom="@id/rl_tou2"
        android:src="@drawable/selector_room_header_bimai"
        android:visibility="gone"
        app:layout_constraintCircle="@id/rl_tou2"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="25dp"
        app:layout_constraintLeft_toLeftOf="@id/rl_tou2"
        app:layout_constraintRight_toRightOf="@id/rl_tou2"
        app:layout_constraintTop_toTopOf="@id/rl_tou2" />


    <TextView
        android:id="@+id/tv_pk_2"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_alignBottom="@+id/rl_tou2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_room_pk_bg"
        android:gravity="center"
        android:maxWidth="50dp"
        android:minWidth="50dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="9sp"
        android:visibility="gone"
        app:layout_constraintCircle="@id/rl_tou2"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintLeft_toLeftOf="@id/rl_tou2"
        app:layout_constraintRight_toRightOf="@id/rl_tou2"
        app:layout_constraintTop_toTopOf="@id/rl_tou2" />

    <ImageView
        android:id="@+id/imgGif2"
        android:layout_width="61dp"
        android:layout_height="54dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="2号麦"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:maxLines="1"
        android:maxEms="6"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_tou2" />

    <TextView
        android:id="@+id/daojishi_2"
        android:layout_width="45dp"
        android:layout_height="13dp"
        android:layout_alignTop="@+id/rl_tou2"
        android:background="@drawable/daojishi_shape"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/rl_tou2"
        android:gravity="center"
        android:textSize="10sp"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>