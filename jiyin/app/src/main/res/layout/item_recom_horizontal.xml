<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"
    android:orientation="horizontal">

    <com.qutu.talk.view.SquareRelativeLayout
        android:layout_width="54dp"
        android:layout_height="wrap_content">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/head_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@mipmap/kaobei"
            app:riv_corner_radius="7dp" />

    </com.qutu.talk.view.SquareRelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="6dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/biaoqian_img"
                    android:layout_width="32dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/biaoqian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/room_biaoqian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                tools:text="倾心交友们相亲交友"
                android:singleLine="true"
                android:textColor="@color/font_333333"
                android:textSize="14sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/name"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="主持：K"
            android:textColor="@color/font_666666"
            android:textSize="11sp" />

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/biaozhi"
        android:layout_width="20dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:src="@mipmap/home_yinpin" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="2080"
        android:layout_toRightOf="@id/biaozhi"
        android:layout_alignParentBottom="true"
        android:textColor="#101010"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ooo"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/hot_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/kaobei" />

        <TextView
            android:id="@+id/hot"
            android:text="110"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ff4f4f"
            android:textSize="12sp" />
    </LinearLayout>






