<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_admin_home"
    android:layout_height="wrap_content"
    android:id="@+id/layout_position_three"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="2dp"
    android:gravity="center"
    android:orientation="vertical">


        <com.qutu.talk.view.RippleView
            android:id="@+id/wave_3"
            style="@style/wave_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <RelativeLayout
        android:id="@+id/rl_tou3"
        android:layout_width="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_centerInParent="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="70dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_centerInParent="true"
            app:riv_corner_radius="180dip"
            app:riv_border_width="1dip"
            app:riv_border_color="@color/font_89E0FB"
            android:id="@+id/img3"
            android:layout_width="60dp"
            android:scaleType="fitXY"
            android:layout_height="60dp"
            android:src="@mipmap/user_header"
            />

        <ImageView
            android:id="@+id/iv_ts3"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>
    </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/img_txk_3"
                style="@style/txk_style"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"></View>
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgVedio3"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/rl_tou3"
            android:layout_alignRight="@id/rl_tou3"
            android:src="@drawable/selector_room_header_bimai"
            app:layout_constraintCircle="@id/rl_tou3"
            app:layout_constraintCircleAngle="135"
            app:layout_constraintCircleRadius="25dp"
            app:layout_constraintLeft_toLeftOf="@id/rl_tou3"
            app:layout_constraintRight_toRightOf="@id/rl_tou3"
            app:layout_constraintTop_toTopOf="@id/rl_tou3"
            />

        <TextView
            android:id="@+id/tv_pk_3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:maxWidth="50dp"
            android:layout_height="13dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_alignBottom="@+id/rl_tou3"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_room_pk_bg"
            android:gravity="center"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="9sp"
            app:layout_constraintCircle="@id/rl_tou3"
            app:layout_constraintCircleRadius="20dp"
            app:layout_constraintCircleAngle="180"
            app:layout_constraintLeft_toLeftOf="@id/rl_tou3"
            app:layout_constraintRight_toRightOf="@id/rl_tou3"
            app:layout_constraintTop_toTopOf="@id/rl_tou3"
            />

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/imgGif3"
            android:scaleType="fitXY"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="3号麦"
        android:maxLines="1"
        android:maxEms="6"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_tou3"
        />
    <TextView
        android:id="@+id/daojishi_3"
        android:layout_width="45dp"
        android:layout_height="13dp"
        android:layout_alignTop="@+id/rl_tou3"
        android:background="@drawable/daojishi_shape"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/rl_tou3"
        android:gravity="center"
        android:textSize="10sp"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>