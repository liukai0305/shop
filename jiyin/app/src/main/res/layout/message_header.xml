<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_chat_msg_white_bg"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingLeft="10dp"
        android:paddingBottom="3dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="系统通知："
            android:textSize="14sp"
            android:textColor="#87ffaf"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textNameXitong"
            android:text="欢迎来到积音语音，官方提倡绿色聊天，任何违法、低俗、暴力、敲诈等不良信息，官方将会采取封号处理"
            android:textColor="#87ffaf"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/textMessage2"
        android:background="@drawable/shape_chat_msg_white_bg"
        android:text="欢迎来到谁的房间"
        android:textColor="#ffea54"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:paddingTop="3dp"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:paddingRight="10dp"
        android:layout_height="wrap_content" />
</LinearLayout>