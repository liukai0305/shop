<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

        <com.qutu.talk.app.view.CircularImage
            android:id="@+id/imgUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
            <TextView
                android:id="@+id/tv_cunt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imgUser"
                app:layout_constraintLeft_toLeftOf="@id/imgUser"
                app:layout_constraintCircle="@id/imgUser"
                app:layout_constraintCircleRadius="25dp"
                app:layout_constraintCircleAngle="45"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="1"
                android:textSize="@dimen/txt_size_11"
                android:textColor="@color/white"
                android:background="@drawable/shape_red_yuan"
                android:visibility="gone"
                />
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="菊花残"
                android:textColor="@color/font_333333"
                android:drawablePadding="5dp"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/textUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="周杰伦哈哈哈哈哈哈"
                android:layout_marginTop="6dp"
                android:textColor="@color/font_999999"
                android:drawablePadding="5dp"
                android:textSize="16sp" />

        </LinearLayout>
        
    </LinearLayout>


    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/font_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>