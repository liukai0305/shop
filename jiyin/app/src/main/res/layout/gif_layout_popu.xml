<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@drawable/gift_back_shape"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toubu_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/user_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/quanmai"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/selector_gift" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_70toumingdubai" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/liwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="礼物"
            android:textColor="@drawable/gift_textcolor_selector"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/baoshi"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/liwu"
            android:text="宝石"
            android:textColor="@drawable/gift_textcolor_selector"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/beibao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/baoshi"
            android:text="背包"
            android:layout_marginLeft="30dp"
            android:textColor="@drawable/gift_textcolor_selector"
            android:textSize="16sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gift_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mizuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/room_gift_mizuan"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/my_enter" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/room_gift_l"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/liwushuliang"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="x1"
                android:textColor="@color/font_ff3e6d"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/room_gift_sl" />
        </LinearLayout>

        <TextView
            android:id="@+id/zengsong"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/room_gift_r"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="赠送"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>