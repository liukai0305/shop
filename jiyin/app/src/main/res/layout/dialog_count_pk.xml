<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_room_round_no_buttom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/txt_size_16"
        android:textColor="@color/font_333333"
        android:textStyle="bold"
        android:text="数值玩法"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:textColor="@color/font_333333"
        android:textSize="@dimen/txt_size_13"
        android:text="1、在开启数值PK页面，可选择麦位进行开启也可全麦位开启；\n2、数值按照麦上用户收到礼物金币计算，1金币=1数值；\n3、点击开启数值PK后可在房间小菜单进行清除数值或关闭操作；"
        />


    <com.qutu.talk.view.ShapeTextView
        android:id="@+id/btn_to_open"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="开启数值玩法"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:cornersRadius="180dp"
        app:solidNormal="@color/font_ff3e6d" />

</LinearLayout>