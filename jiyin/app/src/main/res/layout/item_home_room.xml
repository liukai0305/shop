<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/csl_item_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_line_empty"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        ></View>
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_line_empty"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_people_head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                     />
                <TextView
                    android:id="@+id/tv_hot_count"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:drawableLeft="@mipmap/icon_home_hot"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="13dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:background="@drawable/shape_home_room_hot_bg"
                    android:textSize="@dimen/txt_size_12"
                    android:textColor="@color/white"
                    android:text="         "
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_home_room_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_home_room_women_bg"
                android:gravity="start|center_vertical"
                android:maxEms="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/font_333333"
                android:textSize="@dimen/txt_size_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:background="@mipmap/icon_lable_yuquan"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/white"
            android:text=""
            />

    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>
