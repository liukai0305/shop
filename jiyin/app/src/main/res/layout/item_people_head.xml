<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_item_root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:elevation="2dp"
        >
        <ImageView
            android:id="@+id/img_people_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_to_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:paddingBottom="2dp"
        android:gravity="center"
        android:elevation="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_head"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_head"
        android:background="@mipmap/icon_attention_bg"
        android:text=""
        android:textSize="@dimen/txt_size_12"
        android:textColor="@color/white"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_to_attention"
        android:layout_marginTop="9dp"
        android:singleLine="true"
        android:maxEms="6"
        android:ellipsize="end"
        android:textSize="@dimen/txt_size_14"
        android:textColor="@color/font_333333"
        android:text=""
        />

</android.support.constraint.ConstraintLayout>
