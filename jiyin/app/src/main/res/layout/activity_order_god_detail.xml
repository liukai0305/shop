<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        layout="@layout/include_title"
        ></include>
    <TextView
        android:id="@+id/tv_status_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:textSize="@dimen/txt_size_11"
        android:textColor="@color/font_333333"
        android:text="等待大神接单"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        android:paddingBottom="14dp"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/card_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/img_order_user_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_game_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/card_head"
            app:layout_constraintTop_toTopOf="@id/card_head"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/font_333333"
            android:textSize="@dimen/txt_size_11"
            android:text="一瓶橙汁"
            />
        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/card_head"
            app:layout_constraintTop_toBottomOf="@id/tv_game_user_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/font_333333"
            android:textSize="@dimen/txt_size_11"
            android:text="一瓶橙汁"
            />

        <TextView
            android:id="@+id/tv_game_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/card_head"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:textColor="@color/font_333333"
            android:textSize="@dimen/txt_size_11"
            android:text="/局"
            />

        <TextView
            android:id="@+id/tv_game_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/tv_game_unit"
            app:layout_constraintTop_toTopOf="@id/card_head"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/font_333333"
            android:textSize="@dimen/txt_size_13"
            android:text="5金币"
            />

        <TextView
            android:id="@+id/tv_game_cunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_game_user_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/font_999999"
            android:textSize="@dimen/txt_size_11"
            android:text="一瓶橙汁"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_head"
            android:textSize="@dimen/txt_size_12"
            android:textColor="@color/font_333333"
            android:text="订单金额"
            />
        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_head"
            android:textSize="@dimen/txt_size_12"
            android:textColor="@color/font_333333"
            android:text="30金币"
            />
        <TextView
            android:id="@+id/tv_order_fee_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_price"
            android:textSize="@dimen/txt_size_12"
            android:textColor="@color/font_333333"
            android:text="手续费"
            />
        <TextView
            android:id="@+id/tv_order_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_price"
            android:textSize="@dimen/txt_size_12"
            android:textColor="@color/font_333333"
            android:text="10金币"
            />

        <TextView
            android:id="@+id/tv_order_wait_price_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_fee"
            android:textSize="@dimen/txt_size_12"
            android:textColor="@color/font_333333"
            android:text="待入账"
            />

        <TextView
            android:id="@+id/tv_order_wait_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_fee"
            android:textSize="@dimen/txt_size_12"
            android:textColor="@color/font_333333"
            android:text="10金币"
            />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/font_666666"
                android:text="服务时间："
                />
            <TextView
                android:id="@+id/tv_service_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_11"
                android:textColor="@color/font_333333"
                android:text=""
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="#F6F6F6"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/font_666666"
                android:text="订单编号："
                />
            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_11"
                android:textColor="@color/font_333333"
                android:text=""
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="#F6F6F6"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/font_666666"
                android:text="下单时间："
                />
            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_11"
                android:textColor="@color/font_333333"
                android:text=""
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:textSize="@dimen/txt_size_12"
            android:textColor="@color/font_666666"
            android:text="备注："
            />
        <TextView
            android:id="@+id/tv_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="@dimen/txt_size_12"
            android:textColor="@color/font_333333"
            android:text=""
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_intro_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/font_999999"
            android:text="若12h内对方不申诉费用将发放至大神账户"
            android:visibility="gone"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_csl_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/shape_order_red"
                android:textSize="@dimen/txt_size_11"
                android:textColor="@color/font_ff3e6d"
                android:text="同意"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_refuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_agree"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/shape_order_gray"
                android:textSize="@dimen/txt_size_11"
                android:textColor="@color/font_999999"
                android:text="拒绝"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_apply_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/shape_order_red"
                android:textSize="@dimen/txt_size_11"
                android:textColor="@color/font_ff3e6d"
                android:text="申请服务"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/shape_order_gray"
                android:textSize="@dimen/txt_size_11"
                android:textColor="@color/font_999999"
                android:text="评价ta"
                android:visibility="gone"
                />

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

</LinearLayout>