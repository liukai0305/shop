<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/rank_bg"
    android:fitsSystemWindows="true"
    tools:context=".activity.FamilyMeltingRankActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:contentInsetStart="0dp"
        >

        <RelativeLayout
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_back_white"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="熔炼榜单"/>


        <TextView
            android:id="@+id/rightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="注册"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:textColor="@color/font_6882fd"
            android:textSize="13sp"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/tv_help_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="代充记录"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:textColor="#101010"
            android:textSize="@dimen/_10ssp" />

        <com.qutu.talk.view.ShapeTextView
            android:id="@+id/rightConfirm"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="完成"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornersRadius="50dp"
            android:visibility="gone"
            app:solidNormal="@color/font_ff3e6d" />

        <TextView
            android:id="@+id/tv_bar_right"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="完成"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:textColor="@color/font_333333"
            android:textSize="12sp"
            android:visibility="gone"
            />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/toolbar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_gravity="right"
            >

            <ImageView
                android:id="@+id/img_bar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/xiaoxi_sz"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>