<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home_qdcg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sign_in_con_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已经连续签到4天"
        android:textColor="@color/font_999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_in_con_text">

        <RelativeLayout
            android:id="@+id/bj_one"
            android:layout_width="59dp"
            android:layout_height="73dp"
            android:background="@drawable/ju_back_shape">

            <ImageView
                android:id="@+id/show_img_one"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:scaleType="center" />

            <TextView
                android:id="@+id/show_text_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_img_one"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bj_two"
            android:layout_width="59dp"
            android:layout_height="73dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/ju_back_shape">

            <ImageView
                android:id="@+id/show_img_two"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:scaleType="center" />

            <TextView
                android:id="@+id/show_text_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_img_two"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="9sp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>