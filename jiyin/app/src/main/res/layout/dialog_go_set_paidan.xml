<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_white_radius"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间："
            android:textSize="@dimen/txt_size_13"
            android:textColor="@color/font_333333"
            />
        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/font_333333"
            android:text=""
            />
        <TextView
            android:id="@+id/tv_room_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/font_333333"
            android:text=""
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技能类型："
            android:textSize="@dimen/txt_size_13"
            android:textColor="@color/font_333333"
            />
        <TextView
            android:id="@+id/tv_skill_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/font_333333"
            android:text="请选择"
            />
        <ImageView
            android:id="@+id/img_next_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务时间："
            android:textSize="@dimen/txt_size_13"
            android:textColor="@color/font_333333"
            />
        <TextView
            android:id="@+id/tv_service_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/font_333333"
            android:text="请选择"
            />
        <ImageView
            android:id="@+id/img_next_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gengduo"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="备注："
        android:textSize="@dimen/txt_size_13"
        android:textColor="@color/font_333333"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_bottom_move"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <EditText
            android:id="@+id/et_paidan_remark"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_et_me_intro"
            android:gravity="start"
            android:textSize="@dimen/txt_size_11"
            android:hint="请输入备注..."
            android:textColorHint="#DDDDDD"
            android:text=""
            />
        <TextView
            android:id="@+id/tv_paidan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/et_paidan_remark"
            app:layout_constraintRight_toRightOf="@+id/et_paidan_remark"
            android:textColor="#999999"
            android:textSize="@dimen/txt_size_10"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="0/50"
            />


    </android.support.constraint.ConstraintLayout>

    <com.qutu.talk.view.ShapeTextView
        android:id="@+id/btn_to_paidan"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="开始派单"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:bl_enabled_drawable="@color/font_ff3e6d"
        app:bl_unEnabled_drawable="@color/color_FFCEDA"
        app:cornersRadius="50dp"
        app:solidNormal="@color/font_ff3e6d" />

</LinearLayout>
