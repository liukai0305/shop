<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_baoxiao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:background="#282828">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#c000"
        android:paddingTop="@dimen/_30sdp"
        android:paddingBottom="@dimen/_40sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_guize"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:layout_marginLeft="11dp"
                app:cardBackgroundColor="#8fff"
                app:cardCornerRadius="13dp">

                <TextView
                    android:id="@+id/tv_guize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="规则"
                    android:textColor="#fff" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_rank"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="14sp"
                android:text="贡献排行榜" />

        </LinearLayout>


        <ImageView
            android:layout_width="242dp"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@mipmap/melting"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_melting"
            android:layout_width="308dp"
            app:cardElevation="0dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="23dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#ee0092"
            android:layout_height="47dp">

            <TextView
                android:layout_width="match_parent"
                android:text="熔炼"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
