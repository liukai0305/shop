<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/god_center_head_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            app:riv_corner_radius="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/god_center_right"
            android:layout_toRightOf="@id/god_center_head_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/god_center_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="一瓶橙汁"
                android:textColor="@color/font_333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/god_center_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/lv_yuan_shape"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="在线"
                android:textColor="@color/font_999999"
                android:textSize="10sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/god_center_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/liaotian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ds_lt" />

            <ImageView
                android:id="@+id/guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/god_center_gz_btn_selector" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/god_center_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评分：5"
            android:textColor="@color/font_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/god_center_Receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="接单：5"
            android:textColor="@color/font_999999"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/god_center_receipt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/ds_ico_sj"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="周一至周日  全天接单"
        android:textColor="@color/font_999999"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/god_center_receipt_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:drawableLeft="@mipmap/ds_ico_bq"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="可接单大区：微信区、QQ区"
        android:textColor="@color/font_999999"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/god_center_receipt_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:drawableLeft="@mipmap/ds_ico_bq"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="擅长位置：上路、下路"
        android:textColor="@color/font_999999"
        android:textSize="11sp" />

    <RelativeLayout
        android:id="@+id/bofang_and_zanting"
        android:layout_width="91dp"
        android:layout_height="26dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/yy_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bofang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/yy_bf" />

        <ImageView
            android:id="@+id/gif_jing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/bofang"
            android:src="@mipmap/yy_jingtai" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_jing_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/bofang"
            android:src="@mipmap/img_voice_play"
            android:visibility="gone" />

        <TextView
            android:id="@+id/time_recom_home_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="9dp"
            android:text="8''"
            android:textColor="#4094FF"
            android:textSize="11sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/god_center_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/font_333333"
        android:textSize="11sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="12dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/evaluate_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价"
            android:textColor="@color/font_333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/evaluate_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="120"
            android:textColor="@color/font_999999"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>