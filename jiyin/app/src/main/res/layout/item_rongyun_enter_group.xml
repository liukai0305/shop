<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView
    android:id="@+id/item_root_msg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_invate_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:paddingBottom="22dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@color/font_333333"
            android:text="                   ffffff                   "
            />
        <View
            android:id="@+id/view_line_msg"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/font_eeeeee"
            app:layout_constraintTop_toBottomOf="@id/tv_invate_intro"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            ></View>


        <LinearLayout
            android:id="@+id/layout_button"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_line_msg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_refuse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="拒绝"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/font_333333"
                />
            <View
                android:id="@+id/view_divider"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/font_eeeeee"
                ></View>
            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center"
                android:text="同意"
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/font_333333"
                />
        </LinearLayout>



    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
</LinearLayout>