<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title"></include>

    <android.support.v7.widget.CardView
        android:id="@+id/card_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/img_family_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/zl_sctp" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/jiazu_mc"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="家族名称"
            android:textColor="@color/font_333333"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="(0/20)"
            android:textColor="@color/font_999999"
            android:textSize="@dimen/txt_size_11" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/family_name_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <EditText
            android:id="@+id/et_family_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_et_family_name"
            android:maxLines="1"
            android:paddingLeft="14dp"
            android:text=""
            android:textColor="@color/font_333333"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:src="@mipmap/jz_sc"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/et_family_name"
            app:layout_constraintRight_toRightOf="@+id/et_family_name"
            app:layout_constraintTop_toTopOf="@+id/et_family_name"

            />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_name_count_two"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_et_family_name"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/font_333333"
        android:textSize="@dimen/txt_size_12"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/jiazu_js"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="家族介绍"
            android:textColor="@color/font_333333"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_intro_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="(0/100)"
            android:textColor="@color/font_999999"
            android:textSize="@dimen/txt_size_11" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_family_intro"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_et_me_intro"
        android:gravity="start"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/font_333333"
        android:textSize="@dimen/txt_size_11" />

    <TextView
        android:id="@+id/et_family_intro_two"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_et_me_intro"
        android:gravity="start"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/font_333333"
        android:textSize="@dimen/txt_size_11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/jiazu_gg"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="家族公告"
            android:textColor="@color/font_333333"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_notice_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="(0/100)"
            android:textColor="@color/font_999999"
            android:textSize="@dimen/txt_size_11" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_family_notice"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_et_me_intro"
        android:gravity="start"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/font_333333"
        android:textSize="@dimen/txt_size_11" />
</LinearLayout>