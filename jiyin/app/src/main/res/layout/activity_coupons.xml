<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.mine.CouponsActivity">

    <include layout="@layout/include_title" />

    <com.qutu.talk.utils.mytablayout.TabLayout
        android:id="@+id/coupons_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabGravity="center"
        app:tabIndicator="@drawable/y_shape_tab_line"
        app:tabIndicatorHeight="3dp"
        app:tabLineOffset="15dp"
        app:tabMode="fixed"
        app:tabPaddingBottom="-10dp"
        app:tabTextAppearance="@style/TabLayoutTextStyle2"
        app:tabTextColor="@color/font_999999" />

    <android.support.v4.view.ViewPager
        android:id="@+id/coupons_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>