<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.game.AppealActivity">

    <include
        layout="@layout/include_title"
        ></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        ></View>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingBottom="16dp"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/card_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/img_order_user_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/card_head"
            app:layout_constraintTop_toTopOf="@id/card_head"
            app:layout_constraintBottom_toBottomOf="@id/card_head"
            >
            <TextView
                android:id="@+id/tv_order_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_11"
                android:textColor="@color/font_333333"
                android:text=""
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:id="@+id/tv_order_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_11"
                    android:textColor="@color/font_333333"
                    android:textStyle="bold"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/tv_order_game_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="@dimen/txt_size_11"
                    android:textColor="@color/font_333333"
                    android:text=""
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_price_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_head"
            android:textSize="@dimen/txt_size_12"
            android:textColor="@color/font_333333"
            android:text="订单金额:"
            />
        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/card_head"
            app:layout_constraintLeft_toRightOf="@+id/tv_order_price_key"
            android:textSize="@dimen/txt_size_12"
            android:textColor="@color/font_333333"
            android:text=""
            />
        <LinearLayout
            android:id="@+id/layout_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_order_price"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/font_333333"
                android:text="下单时间："
                />
            <TextView
                android:id="@+id/tv_order_time_appeal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/font_333333"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="16dp"
            android:paddingRight="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_time"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_12"
                android:textColor="@color/font_333333"
                android:text="订单号："
                />
            <TextView
                android:id="@+id/tv_order_number"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_11"
                android:textColor="@color/font_333333"
                android:text=""
                />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/font_eeeeee"
        ></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:text="申诉原因："
        android:textSize="@dimen/txt_size_13"
        android:textColor="@color/font_333333"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_bottom_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <EditText
            android:id="@+id/et_paidan_remark"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_et_me_intro"
            android:gravity="start"
            android:textSize="@dimen/txt_size_11"
            android:hint="说点什么吧..."
            android:textColorHint="#DDDDDD"
            android:text=""
            />
        <TextView
            android:id="@+id/tv_paidan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/et_paidan_remark"
            app:layout_constraintRight_toRightOf="@+id/et_paidan_remark"
            android:textColor="#999999"
            android:textSize="@dimen/txt_size_10"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="0/100"
            />
        <TextView
            android:id="@+id/tv_upload_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_paidan_remark"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="18dp"
            android:textColor="@color/font_333333"
            android:textSize="@dimen/txt_size_13"
            android:text="上传截图:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_upload_key"
            app:layout_constraintTop_toTopOf="@+id/tv_upload_key"
            app:layout_constraintBottom_toBottomOf="@+id/tv_upload_key"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/font_999999"
            android:text="最多可添加三张图片"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sor_release_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        >

        <com.qutu.talk.view.ShapeTextView
            android:id="@+id/btn_to_appeal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="提交投诉"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:bl_enabled_drawable="@color/font_ff3e6d"
            app:bl_unEnabled_drawable="@color/color_FFCEDA"
            app:cornersRadius="50dp"
            app:solidNormal="@color/font_ff3e6d" />

    </RelativeLayout>


</LinearLayout>
</ScrollView>