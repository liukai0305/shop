<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.HelpRechargeActivity">

    <View
        android:id="@+id/view_empty_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary" />

    <include layout="@layout/include_title" />

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_48sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="@dimen/_48sdp"
        app:cardCornerRadius="@dimen/_24sdp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="@dimen/_10ssp"
        android:text="春花" />
    <TextView
        android:id="@+id/tv_userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="@dimen/_10ssp"
        android:text="123456789" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#888"
        android:textSize="@dimen/_8ssp"
        android:text="若账号核对错误请点击左上角返回" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="#f1f1f1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="能量豆"
            android:textColor="#101010"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/et_diamond"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_29sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/border_id"
            android:gravity="center_vertical"
            android:hint="请输入代充能量豆"
            android:inputType="number"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="确认    "
            android:textColor="#101010"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/et_rewrite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_29sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/border_id"
            android:gravity="center_vertical"
            android:hint="请确认金币值"
            android:inputType="number"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginLeft="@dimen/_26sdp"
        android:layout_marginTop="@dimen/_26sdp"
        android:layout_marginRight="@dimen/_26sdp"
        app:cardBackgroundColor="#ee0092"
        app:cardCornerRadius="@dimen/_24sdp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认代充"
            android:textColor="#fff" />


    </android.support.v7.widget.CardView>

</LinearLayout>