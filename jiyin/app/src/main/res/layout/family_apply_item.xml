<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fa_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/font_dddddd"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_white_radius">

        <com.qutu.talk.app.view.CircularImage
            android:id="@+id/fa_headimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/fa_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/fa_headimg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/fa_headimg"
            android:text="用户名"
            android:textColor="@color/font_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fa_shenqing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/fa_name"
            android:layout_alignBottom="@id/fa_headimg"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/fa_headimg"
            android:text="yonghuming "
            android:textColor="@color/font_999999"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/anniu_linea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jujue"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/hong_family_apply_shape"
                android:gravity="center"
                android:text="拒绝"
                android:textColor="@color/font_ff3e6d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tongyi"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:background="@drawable/quan_hong_faily_apply_shape"
                android:gravity="center"
                android:text="同意"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/yicaozuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/font_999999"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>