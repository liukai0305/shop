<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >

    <include layout="@layout/include_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/layout_price"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@color/font_333333"
            android:text="价格"
            />
        <ImageView
            android:id="@+id/img_next_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_gengduo"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tv_value_one_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_next_1"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/font_999999"
            android:text=" "
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/font_eeeeee"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        ></View>
    <RelativeLayout
        android:id="@+id/layout_area"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@color/font_333333"
            android:text="可接单大区"
            />
        <ImageView
            android:id="@+id/img_next_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_gengduo"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tv_select_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_next_2"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/font_999999"
            android:text="请选择"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_area"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/font_eeeeee"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        ></View>

    <RelativeLayout
        android:id="@+id/layout_good_at_position"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@color/font_333333"
            android:text="擅长位置"
            />
        <ImageView
            android:id="@+id/img_next_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_gengduo"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tv_good_at_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_next_3"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/font_999999"
            android:text="请选择"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_good_at_position"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/font_eeeeee"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        ></View>

    <RelativeLayout
        android:id="@+id/layout_people_info"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@color/font_333333"
            android:text="个人信息"
            />
        <ImageView
            android:id="@+id/img_next_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_gengduo"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tv_people_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_next_4"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/txt_size_11"
            android:textColor="@color/font_999999"
            android:text=""
            />
    </RelativeLayout>


</LinearLayout>