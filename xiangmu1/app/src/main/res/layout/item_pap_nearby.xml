<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/pao_nearby_iv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pao_nearby_name"
        android:text="名字"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pao_nearby_iv"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pao_nearby_ivji"
        android:background="@mipmap/lv1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pao_nearby_name"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/pao_nearby_iv"
        android:background="@mipmap/lv1"
        android:id="@+id/iv"
        app:layout_constraintTop_toBottomOf="@id/pao_nearby_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pao_nearby_wen"
        android:text="哈哈哈哈哈哈哈哈哈哈哈"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv"
        app:layout_constraintLeft_toRightOf="@id/pao_nearby_iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>