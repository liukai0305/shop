<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/dynamic_iv_header"
        android:scaleType="centerCrop"
        android:layout_margin="15dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/dynamic_finsh"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dynamic_iv_header"
        android:text="已结束"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/dynamic_title"
        android:textColor="#090808"
        android:textSize="15dp"
        android:maxLength="10"
        android:text="明十三陵清明祭祀祈福大典"
        android:ellipsize="end"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dynamic_finsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/dynamic_tags"
        android:textColor="#F10808"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text="汉服活动 同袍面基 文化宣传"
        app:layout_constraintTop_toBottomOf="@id/dynamic_finsh"
        app:layout_constraintLeft_toRightOf="@id/dynamic_iv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/dynamic_iv_time"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/dynamic_iv_header"
        app:layout_constraintTop_toBottomOf="@id/dynamic_tags"
        android:src="@mipmap/icon_time"
        android:layout_width="15dp"
        android:layout_height="15dp"/>
    <TextView
        android:id="@+id/dynamic_tv_time"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/dynamic_tags"
        app:layout_constraintLeft_toRightOf="@id/dynamic_iv_time"
        android:text="2020-04-05 09:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/dynamic_apply"
        android:text="已报名：4人"
        android:layout_marginTop="3dp"
        android:textSize="11dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/dynamic_tv_time"
        app:layout_constraintTop_toBottomOf="@id/dynamic_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/dynamic_iv_place"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/dynamic_iv_time"
        app:layout_constraintLeft_toRightOf="@id/dynamic_iv_header"
        android:layout_width="15dp"
        android:layout_height="15dp"/>
    <TextView
        android:id="@+id/dynamic_tv_place"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/dynamic_tv_time"
        app:layout_constraintLeft_toRightOf="@id/dynamic_iv_place"
        android:maxLength="9"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:text="昌平区-昌赤路长陵"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>