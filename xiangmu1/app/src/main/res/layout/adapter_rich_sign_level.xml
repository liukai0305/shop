<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/mRR"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/img_lv"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_lv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center" />
    </RelativeLayout>



    <ImageView
        android:id="@+id/img_rich_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toRightOf="@id/mRR"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rich_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="123456"
        app:layout_constraintLeft_toRightOf="@id/img_rich_head"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rich_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        android:drawableLeft="@mipmap/female"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        app:layout_constraintLeft_toRightOf="@id/img_rich_head"
        app:layout_constraintTop_toBottomOf="@id/tv_rich_nickName" />

    <TextView
        android:id="@+id/tv_rich_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@mipmap/icon_map_annotation"
        android:text="123"
        app:layout_constraintLeft_toRightOf="@id/img_rich_head"
        app:layout_constraintTop_toBottomOf="@id/tv_rich_sex" />

    <ImageView
        android:id="@+id/img_rich_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/tv_rich_nickName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rich_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="456123"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>